<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragmentBottomPanel"
    android:id="@+id/bottom_panel">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/bottom_panel_bkg"
        android:orientation="horizontal">

        <ImageButton
            android:paddingTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_event_black_48dp"
            android:layout_weight="1"
            android:background="@color/bottom_panel_bkg"
            android:onClick="naviEvent"/>

        <ImageButton
            android:paddingTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_home_black_48dp"
            android:layout_weight="1"
            android:background="@color/bottom_panel_bkg"
            android:onClick="naviHome"/>

        <ImageButton
            android:paddingTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_search_black_48dp"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:background="@color/bottom_panel_bkg"
            android:onClick="naviSearch"/>

    </LinearLayout>

</FrameLayout>
